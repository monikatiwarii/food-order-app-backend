                            "required": false,
                            "schema": {
                                "type": "number"
                            }
                        },
                        {
                            "in": "query",
                            "name": "sort",
                            "description": "Sort By",
                            "required": false,
                            "schema": {
                                "type": "enum",
                                "enum":[
                                    "most_popular",
                                    "low_to_high",
                                    "high_to_low"
                                ]
                            }
                        },
                        {
                            "in": "query",
                            "name": "limit",
                            "description": "Product list Limit",
                            "required": false,
                            "schema": {
                                "type": "number"
                            }
                        }
                    ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "post": {
                "tags": ["Product"],
                "summary": "To Create Base Product",
                "requestBody": {
                    "description": "Create Base Product",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/definitions/createBaseProduct"
                            }
                        },
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/createBaseProduct"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "patch": {
                    "tags": ["Product"],
                    "summary": "To Update Product",
                    "parameters":[
                        {
                            "in": "query",
