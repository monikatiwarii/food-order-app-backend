                            "description": "Product Id",
                            "required": true,
                            "schema": {
                                "type": "number"
                            }
                        }
                    ],
                    "requestBody": {
                        "description": "Create Base Product",
                        "required": true,
                        "content": {
                            "multipart/form-data": {
                                "schema": {
                                    "$ref": "#/definitions/createBaseProduct"
                                }
                            },
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/createBaseProduct"
                                }
                            }
                        }   
                    },
                    "responses": {
                        "200": {
                            "description": "OK"
                        }
                    }
            },
            "delete": {
                "tags": ["Product"],
                "summary": "To Delete Product",
                "parameters":[
                   {
                        "in": "query",
                        "name": "productId",
                        "description": "Product Id",
                        "required": true,
                        "schema": {
                            "type": "number"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/product/{productId}":{
            "get": {
                "tags": ["Product"],
                "summary": "To get Individual product Data",
                "parameters":[
                        {
                            "in": "path",
                            "name": "productId",
                            "description": "Product Id",
                            "required": false,
                            "schema": {
                                "type": "number"
                            }
                        }
                    ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
