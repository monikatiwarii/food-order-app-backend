{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "livelyt-be-test",
        "description": "A simple Cute website",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "security": [{
        "bearerAuth": []
    }],
    "servers": [
        {
            "url": "/api/",
            "description": "to use routers"
        }
    ],
    "tags": [
        {
            "name": "Food Order App",
            "description": "API for Food Order App"
        }
    ],
    "consumes": [
        "application/json",
        "multipart/form-data"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/category": {
            "get": {
                "tags": ["Category"],
                "summary": "To get all Categories",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "post": {
                "tags": ["Category"],
                "summary": "To Create Category",
                "requestBody": {
                    "description": "Create Category",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/createCategory"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/category/{categoryId}":{
            "get": {
                "tags": ["Category"],
                "summary": "To get Individual category Data",
                "parameters":[
                        {
                            "in": "path",
                            "name": "categoryId",
                            "description": "category Id",
                            "required": true,
                            "schema": {
                                "type": "number"
                            }
                        }
                    ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/restaurants": {
            "get": {
                "tags": ["Restaurant"],
                "summary": "To get all Restaurant",
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            },
            "post": {
                "tags": ["Restaurant"],
                "summary": "To Create Restaurant",
                "requestBody": {
                    "description": "Create Restaurant",
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "$ref": "#/definitions/createRestaurant"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/restaurants/{restaurantId}":{
            "get": {
                "tags": ["Restaurant"],
                "summary": "To get Individual Restaurant Data",
                "parameters":[
                        {
                            "in": "path",
                            "name": "restaurantId",
                            "description": "Restaurant Id",
                            "required": true,
                            "schema": {
                                "type": "number"
                            }
                        }
                    ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    },
    "definitions": {
        "createCategory": {
            "type": "object",
            "properties": {
                "name":{
                    "type": "string",
                    "required": true
                },
                "restaurants":{
                    "type": "number",
                    "required": true
                }
            }
        },
        "createRestaurant": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "required": true
                },
                "address": {
                    "type": "string",
                    "required": true
                },
                "time": {
                    "type": "string",
                    "required": true
                },
                "slug": {
                    "type": "string",
                    "required": true
                },
                "price": {
                    "type": "number",
                    "required": true
                },
                "images": {
                    "type": "array",
                    "items": {
                        "type": "file",
                        "description": "Multiple File Upload",
                        "format": "binary"
                    },
                    "required": true
                },
                "menu": {
                    "type": "array",
                    "items": {
                        "type": "file",
                        "description": "Multiple File Upload",
                        "format": "binary"
                    },
                    "required": true
                },
                "category": {
                    "type": "string",
                    "required": true
                }
 
            }
        }
    }
}