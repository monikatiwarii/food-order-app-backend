    "paths": {
        "/product": {
            "get": {
                "tags": ["Product"],
                "summary": "To get all products",
                "parameters":[
                        {
                            "in": "query",
                            "name": "category",
                            "description": "Product Category Id",
                            "required": false,
                            "schema": {
                                "type": "number"
                            }
                        },
                        {
                            "in": "query",
                            "name": "subcategory",
                            "description": "Product SubCategory Id",
                            "required": false,
                            "schema": {
                                "type": "number"
                            }
                        },
                        {
                            "in": "query",
                            "name": "brand",
                            "description": "Product Brand Id",
                            "required": false,
                            "schema": {
                                "type": "string"
                            }
                        },
                        {
                            "in": "query",
                            "name": "start_range",
                            "description": "Product Price Start Range",
                            "required": false,
                            "schema": {
                                "type": "number"
                            }
                        },
                        {
                            "in": "query",
                            "name": "end_range",
